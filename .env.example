# ETEx - Environment Variables Template
# Copy this file to .env and fill in your values
# DO NOT COMMIT .env FILE - It contains secrets!

# ============================================
# Application Settings
# ============================================

# Environment (development, production, testing)
ENVIRONMENT=development

# Application name
APP_NAME=ETEx

# Backend API settings
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_RELOAD=true

# Frontend dev server
FRONTEND_PORT=5173

# ============================================
# Database Configuration
# ============================================

# Database URL for SQLAlchemy
# SQLite (development)
DATABASE_URL=sqlite:///./data/database/etex.db

# PostgreSQL (production - future)
# DATABASE_URL=postgresql://user:password@localhost:5432/etex

# ============================================
# Security & Authentication
# ============================================

# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-change-in-production

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ============================================
# External API Keys
# ============================================

# IATE API (EU Terminology Database)
# Get key from: https://iate.europa.eu/
IATE_API_KEY=

# IEC Electropedia API (if available)
IEC_API_KEY=

# DeepL API (Phase 2 - translation service)
# Get key from: https://www.deepl.com/pro-api
DEEPL_API_KEY=

# ============================================
# File Upload Settings
# ============================================

# Maximum upload file size (bytes) - 10MB default
MAX_UPLOAD_SIZE=10485760

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=.pdf,.txt,.csv,.tbx

# Upload directory
UPLOAD_DIR=./data/uploads

# ============================================
# Logging Configuration
# ============================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file location
LOG_FILE=./logs/etex.log

# ============================================
# MCP Server Configuration (for Claude Code agents)
# ============================================

# GitHub MCP Token (required by all agents)
# Scopes: repo, workflow, write:packages, read:org
GITHUB_TOKEN=

# Context7 MCP API Key (optional - for latest library docs)
# Get free key from https://context7.com (100 requests/day)
CONTEXT7_API_KEY=

# ============================================
# Development Tools
# ============================================

# Enable debug mode
DEBUG=true

# Enable SQL query logging
SQL_ECHO=false

# Enable API documentation
ENABLE_DOCS=true

# ============================================
# Testing Configuration
# ============================================

# Test database URL
TEST_DATABASE_URL=sqlite:///:memory:

# Test mode flag
TESTING=false
